<%- include('includes/header.ejs') %>
    <body>
        <%- include('includes/navigation.ejs') %>
        <div class="container">
            <br>
            <%- messages('includes/message', locals) %>
            <% if(errors) {
                for (let error of errors) {
            %>
            <div class="alert alert-danger"><%= error.msg %></div>
            <%  } 
            }%>
            <form class="product-form col-lg-6" action="/articles" method="POST" enctype="multipart/form-data">
                
                <div class="form-group">
                    <label for="Title">Title</label>
                    <input class="form-control" type="text" name="title" id="title">
                </div>
                <div class="form-group">
                    <label for="Body">Body</label>
                    <textarea class="form-control" type="text" name="body" id="body" rows=10></textarea>
                </div>
                <div class="form-group">
                    <label for="Title">Image for your Article</label>
                    <input class="form-control" type="file" name="articleImage" id="file" style="padding: 3px;">
                </div>
        
                <button class="btn btn-primary" type="submit" value="Submit">Add Article</button>
            </form>
        </div>
    </body>
</html>